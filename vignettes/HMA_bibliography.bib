	langid = {english},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2020WR029528},
	keywords = {Dynamic storage, hydrology model, storage-discharge relationship, streamflow generation, upscaling},
	file = {Full Text PDF:C\:\\Users\\marti\\Zotero\\storage\\IRQZ59BS\\Wen et al. - 2021 - The Limits of Homogenization What Hydrological Dy.pdf:application/pdf;Snapshot:C\:\\Users\\marti\\Zotero\\storage\\B5AUQ6YR\\2020WR029528.html:text/html},
